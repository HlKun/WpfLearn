<Window x:Class="XAML_Learn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAML_Learn"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:Student x:Key="student" StudentName="1" Age="5"></local:Student>
    </Window.Resources>
    <StackPanel>
        <Button BorderThickness="5" x:Name="button" Content="{Binding Text,ElementName=txt}"></Button>
        <TextBlock Text="123" x:Name="txt"></TextBlock>
    </StackPanel>
</Window>
