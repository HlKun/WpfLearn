<Window x:Class="WpfDependecy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDependecy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <local:CustomButton MyContent="{Binding ContentSource}"></local:CustomButton>

        <Button x:Name="ShowBtn" Click="ShowBtn_Click" Command="" Content="{Binding ContentSource}"></Button>
    </StackPanel>
</Window>
